{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base Preset",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "release-debug",
      "displayName": "Release build with debug info",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "benchmark",
      "displayName": "Benchmark (Release with Symbols)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG -g -march=znver5",
        "CMAKE_C_FLAGS": "-O3 -DNDEBUG -g -march=znver5",
        "BUILD_SHARED_LIBS": "OFF"
      }
    }
  ]
}